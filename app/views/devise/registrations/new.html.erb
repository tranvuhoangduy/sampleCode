
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center ">
    <% if params[:query] == '3' %>
      <h1>Pro Account</h1>
      <p>Sign up for pro account for $10/month and get access to the Community.</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>Sign up for free and get basic access to the community.</p>
    <% end %>

  </div>

  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <% if params[:plan] == '3' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

